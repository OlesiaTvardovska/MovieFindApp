<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MovieDetailsFragment">
    <data>
        <variable
            name="viewmodel"
            type="com.example.moviefind.models.MovieViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/movie_details_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{viewmodel.movie != null ? 0 : 2}">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/movie_details_image"
                android:layout_width="fill_parent"
                android:layout_height="500dp"
                android:scaleType="matrix"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/txtView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@{viewmodel.movie.title}"
                />

            <TextView
                android:id="@+id/txtView_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:gravity="center"
                android:text="@{viewmodel.movie.titleType}"
                />
        </LinearLayout>
    </ScrollView>

</layout>